<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppThemeDay" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- windowBackground只会影响主窗口的背景，colorBackground包含windowBackground，而且还控制其他元素的颜色 -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppThemeNight" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/black_gray</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TranslucentBar" parent="AppThemeDay">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <!-- 背景图会嵌入状态栏 -->
    <style name="welcomeTheme" parent="TranslucentBar">
        <item name="android:windowBackground">@drawable/welcome_bg</item>
    </style>

    <style name="Fullscreen" parent="AppThemeDay">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 会造成下一个Activity闪动
             原因是这时没有状态栏，下一个Activity直接从最上面绘制，状态栏显示时被迫下移
             规避此问题的方法是让下一个Activity设置FLAG_TRANSLUCENT_STATUS和FitsSystemWindows,直接在状态栏下方绘制
             建议使用setStatusBarColorK(true)-->
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
